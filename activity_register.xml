<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE1EA"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="152dp"
            android:layout_height="97dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="21dp"
            app:srcCompat="@drawable/register"
            android:foregroundGravity="center"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="150dp"
            android:fontFamily="casual"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:textSize="23sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="247dp"
            android:fontFamily="casual"
            android:inputType="text"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="23sp"
            android:typeface="normal" />

        <EditText
            android:id="@+id/editemail"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="154dp"
            android:layout_marginEnd="67dp"
            android:background="#F5AEFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#8B09CC" />

        <EditText
            android:id="@+id/editpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="258dp"
            android:layout_marginEnd="68dp"
            android:background="#F5AEFF"
            android:ems="10"
            android:inputType="textVisiblePassword|number|textPassword|numberPassword"
            android:textColor="#8B09CC" />

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="105dp"
            android:background="#FFEF7E"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="ثبت نام"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="201dp"
            android:fontFamily="casual"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="23sp"
            android:typeface="normal" />

        <EditText
            android:id="@+id/editname"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="205dp"
            android:layout_marginEnd="67dp"
            android:background="#F5AEFF"
            android:breakStrategy="high_quality"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="textPersonName"
            android:textColor="#8B09CC"
            android:typeface="serif" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="296dp"
            android:layout_marginEnd="123dp"
            android:clickable="true"
            android:contextClickable="true"
            android:cursorVisible="true"
            android:fontFamily="casual"
            android:text="You have account"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="normal" />
    </RelativeLayout>
</ScrollView>